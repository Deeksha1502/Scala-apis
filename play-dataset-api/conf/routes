# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET   /health/db   controllers.HealthController.dbHealth

GET     /datasets                 controllers.DatasetController.getAllDatasets

# Dataset APIs
POST    /api/dataset/v1/create      controllers.DatasetController.createDataset
GET     /api/dataset/v1/read        controllers.DatasetController.getAllDatasets
GET     /api/dataset/v1/read/:id    controllers.DatasetController.getDatasetById(id: String)
DELETE  /api/dataset/v1/delete/:id  controllers.DatasetController.deleteDataset(id: String)

